rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isNotBanned() {
      return isAuthenticated() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.banned == false;
    }

    // Event flyers - public read, creator write only
    match /events/{eventId}/{allPaths=**} {
      allow read: if true; // Flyers are public for display
      allow write: if isAuthenticated() &&
                   isNotBanned() &&
                   request.auth.uid == firestore.get(/databases/(default)/documents/events/$(eventId)).data.creatorId;
      allow delete: if isAuthenticated() &&
                    (request.auth.uid == firestore.get(/databases/(default)/documents/events/$(eventId)).data.creatorId ||
                     isAdmin());
    }

    // User profile images - authenticated read, owner write
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && isNotBanned();
      allow write: if isOwner(userId) && isNotBanned();
      allow delete: if isOwner(userId) || isAdmin();
    }

    // Chat images - only attendees can upload/read
    match /chats/{chatId}/{allPaths=**} {
      allow read: if isAuthenticated() && isNotBanned();
      allow write: if isAuthenticated() &&
                   isNotBanned() &&
                   (request.auth.uid in firestore.get(/databases/(default)/documents/events/$(chatId)).data.attendees ||
                    request.auth.uid == firestore.get(/databases/(default)/documents/events/$(chatId)).data.creatorId);
    }

    // Default deny rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
